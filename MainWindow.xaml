<Window x:Class="LANCHAT2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LAN Chat" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="textBoxReceivedMessages" Grid.Row="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="textBoxMessage" Width="400"/>
            <TextBox x:Name="textBoxIpAddress" Width="200" Margin="10"/>
            <Button x:Name="buttonSend" Content="Send" Width="80" Click="buttonSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
